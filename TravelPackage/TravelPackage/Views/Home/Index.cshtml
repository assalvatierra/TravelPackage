@model IEnumerable<TravelPackage.Models.tpAreas>

@{
    ViewBag.metaTitle = "Popular Tourist Destinations in the Philippines";
    ViewBag.metaDescription = "List of popular tourist destinations in the philippines.";
}

<div class="jumbotron">
    <h1>Welcome</h1>
    <p class="lead">Find your travel packages here!</p>
</div>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <h2>@item.Name</h2>
            <a href="http://realbreezedavaotours.com/TourPackages/samal-inland-package-tour/" title="Samal Tour (Inland)"><img width="100%" src="@item.PgFeatureImg"></a>
            <p>@item.PageRemarks</p>
            <p>
                @Html.ActionLink("GO TO " + @item.Name + " >>", "Destination", new { id = @item.Id, AreaName = @item.Name }, new { @class = "btn btn-default" } )

            </p>
        </div>
    }

</div>