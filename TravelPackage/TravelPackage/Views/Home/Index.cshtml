@model IEnumerable<TravelPackage.Models.tpAreas>

@{
    ViewBag.metaTitle = "Travel, Vacation and Tour Packages in Philippines";
    ViewBag.metaDescription = "We are travel agency that provides affordable tour, vacation and travel packages to popular tourist destinations in the philippines.";
}

<!-- banner -->
<div class="travel-banner">
    <div>

        <h1 style="font-size:80px;color:midnightblue;" > Enjoy your life <br /> and go explore </h1>
        <p style="font-size:25px;color:black;"> Enjoy breathaking view of the nature <br />
        Relax and cherish your dreams to the fullest.</p>
    </div>
</div>

<!-- contents -->
<div class="container">
    <!-- Search / Booking -->
    <div class="booking-search-form form-inline">
        <div class="form-group mb-1 search-input">
            <label> Location </label>
            @*<input type="text" name="Input-location" class="form-control" />*@

            <select id="input-Location" class="form-control" style="width:10rem;">
                <option selected>Location</option>
                <option>Davao City</option>
                <option>Cebu City</option>
                <option>Bohol City</option>
            </select>
        </div>
        <div class="form-group mb-1  search-input">
            <label> Tour </label>
            <select id="inputState" class="form-control" style="width:12rem;">
                <option selected>Activity</option>
                <option>City Tour</option>
                <option>Countryside Tour</option>
                <option>Island Hopping</option>
            </select>
        </div>
        <div class="form-group mb-1  search-input">
            <label> Date Start</label>
            <input type="date" name="Input-date-start" class="form-control" id="" />
        </div>
        <div class="form-group mb-1  search-input">
            <label> Date End </label>
            <input type="date" name="Input-date-end" class="form-control" />
        </div>
        <div class="form-group mb-1  search-input">
            <label> Guests </label>
            <input type="number" name="Input-noGuests" class="form-control" style="width:10rem;" value="2" />
        </div>
        <button class="btn btn-primary mb1" style=" margin-top: 20px; margin-left: 10px; padding: 10px 40px; "> Search </button>
    </div>



    <div class="Tour-Packages-List">
        <div class="row" style="margin-bottom:30px;">
            <h2 class="tour-section-title"> Popular Tours </h2>
            <a href="#" style="padding-top:10px;margin-left:20px;"> View All Tours > </a>
        </div>
        <div class="row" style="margin-bottom:120px;">
            @foreach (var products in ViewBag.FeaturedTour as IEnumerable<TravelPackage.Models.tpProducts>)
            {


                <div class="tour-package-card col-lg-3 col-md-4  col-sm-6">
                    <div class="card">
                        <div class="card-img-top">
                            <a href="@Url.Action("Product", new { id = products.Id, ProductName = products.Name })">

                                <img class="card-img-top" src="@products.PgFeatureImg" alt="Card image cap">

                            </a>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-card-bold">@products.Name</h5>
                            <p class="home-product-description"> @products.ShortRemarks </p>
                            <p class="card-text"> <small class="text-muted">Price : <span style="color: mediumseagreen;"> P-PPP </span>  </small> </p>
                            <a href="@Url.Action("Product", new { id = products.Id, ProductName = products.Name })" class="card-link">More information ></a>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>

</div>

<!-- Featured Activities -->
<div class="div-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-12" style="margin-top: 100px;">
                <h2> Featured Activities </h2>
                <p style="margin-top: 30px;">
                    Go wild, go slow, go smooth, go solo – an adventure is what you make of it.
                    Choose one style or create a package, fill your passports with adventures together.
                </p>
                <a href="#" style="margin-top: 30px;">
                    Browse all activities >
                </a>
            </div>
            <div class="col-lg-8 col-sm-12 featured-activities-items" >
                <div class="activity-bg-img">
                    <h4> City Tours </h4>
                </div>
                <div class="activity-bg-img" style="background-image:url('/Images/Destinations/Palawan/coron_palawan.jpg')">
                    <h4> Island Hopping </h4>
                </div>
                <div class="activity-bg-img" style="background-image:url('/Images/Destinations/Cebu/Canyoneering-Moalboal/Canyoneering.png')">
                    <h4> Canyoneering </h4>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Popular Destinations -->
<div class="container">

    <div class="Tour-Packages-List">
        <div class="row" style="margin-bottom:30px;">
            <h2> Popular Destinations </h2>
            <a href="#" style="padding-top:10px;margin-left:20px;"> View All Tours > </a>
        </div>
        <div class="row" style="margin-bottom:120px;">
            @foreach (var item in Model)
            { 

                <div class="tour-package-card col-lg-4 col-sm-12">
                    <div class="card">
                        <img class="card-img-top" src="@item.PgFeatureImg" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">@item.Name</h4>
                            <p class="card-text">@item.PageRemarks</p>
                            <a href="@Url.Action("Destination",new { AreaName = @item.Name })" class="">More information ></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>


