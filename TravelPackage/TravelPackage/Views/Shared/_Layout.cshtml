<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.metaTitle</title>
    <META NAME="ROBOTS" CONTENT="INDEX, FOLLOW">
    <meta name="description" content="@ViewBag.metaDescription" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css/DateRangePicker")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Travel Packages", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Real Breeze Travel and Tours - Philippines</p>
        </footer>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-bottom callbutton">
        <div class="container">
            <div class="navbar-header">
                <a href="tel:+639167558473" class="navbar-brand">CALL</a>
                <a href="sms:/+639167558473" class="navbar-brand">SMS</a>
                <a href="mailto:realbreeze.cebu@gmail.com?Subject=Travel%20Package%20Inquiry" target="_top" class="navbar-brand">Email</a>
                <a href="https://api.whatsapp.com/send?phone=639167558473" class="navbar-brand">
                    <img src="~/Images/Icons/whatsapp-original.png" width="25" /><br />
                </a>

                <a href="viber://chat?number=639167558473" class="navbar-brand">
                    <img src="~/Images/Icons/viber-original.png" width="25" /><br />
                </a>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-bottom contachbutton">
        <div class="container">
            <div class="navbar-header">
                <a href="tel:+639090761575" class="navbar-brand">(+63)909-076-1575</a>
                <a href="tel:+639167558473" class="navbar-brand">(+63)916-755-8473</a>
                <a href="mailto:realbreeze.cebu@gmail.com?Subject=Travel%20Package%20Inquiry" target="_top" class="navbar-brand">Email: realbreeze.cebu@gmail.com</a>

                <a href="https://api.whatsapp.com/send?phone=639167558473" class="navbar-brand">
                    <img src="~/Images/Icons/whatsapp-original.png" width="25" /> <text>WhatsApp</text>
                </a>

                <a href="viber://chat?number=639167558473" class="navbar-brand">
                   <img src="~/Images/Icons/viber-original.png" width="25" /> <text>Viber</text>
                </a>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DateRangePicker")
    @RenderSection("scripts", required: false)
</body>
</html>
